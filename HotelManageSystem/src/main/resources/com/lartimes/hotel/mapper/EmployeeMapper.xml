<mapper namespace="com.lartimes.hotel.mapper.EmployeeMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.lartimes.hotel.model.po.Employee">
        <id column="id" property="id" />
        <result column="name" property="name" />
        <result column="sex" property="sex" />
        <result column="birth_day" property="birthDay" />
        <result column="phone_num" property="phoneNum" />
        <result column="wage" property="wage" />
        <result column="work_position" property="workPosition" />
        <result column="id_card" property="idCard" />
    </resultMap>

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        id, name, sex, birth_day, phone_num, wage, work_position, id_card
    </sql>

</mapper>
